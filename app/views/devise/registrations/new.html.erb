<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <% if params[:plan] == '2' %>
      <h1 class="text-center">ProCHOPs</h1>
      <p>Sign up for pro account for $9.99/month and get access to the community, contact information and online tutors!</p>
    <% else %>
      <h1 class="text-center">BaseLAB</h1>
       <p>Sign up for free and get basic access to the community.</p>
    <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
        <h2>Sign up</h2>
        
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %> 
          <%= render "basic_form" %>
        <% end %>
        
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

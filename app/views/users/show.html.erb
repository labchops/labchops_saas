<div class="row">
    <div class="col-md-3 text-center">
        <%= image_tag @user.profile.avatar.url(:medium) %>
        <h3><%= @user.profile.first_name %> <%= @user.profile.last_name %></h3>

        <% if current_user.plan_id == 2 %>
            <div class="well profile-block contact-info">
                <h3>Contact Info</h3>
                <%= @user.profile.phone_number %></br>
                <%= @user.profile.contact_email %></br>
            </div>
        <% end %>
        <%= link_to "Edit Profile", edit_user_profile_path(current_user) %></br> 
        <%= link_to "Visit the LabCHOPs community", users_path %>
    </div>
        <div class="col-md-6">
            <h3><span class="subject-area-title-icon"><%= subject_area_title_icon %></span> <%= @user.profile.subject_area %></h3>
            <div class="well profile-block profile-description">
              <h3>Bio</h3>
              <%= @user.profile.description %></br>              
            </div>                
                <div class="well">
                    <%= render 'message' %>
                </div>
        </div>
</div>